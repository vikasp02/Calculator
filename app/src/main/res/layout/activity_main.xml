<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#808080"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background=" #e6e6ff"
        android:gravity="right|center"
        android:inputType="numberDecimal"
        android:text="0"
        android:textSize="40pt"/>





    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/buAC"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="AC"
                android:textSize="30dp"
                android:onClick="acEvent"
                android:background="  #b30000"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/PlusMinus"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background=" #000000"
                android:text="+/-"
                android:textSize="25dp"
                android:onClick="numberEvent"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background=" #000000"
                android:text="/"
                android:textSize="25dp"
                android:onClick="operatorEvent"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/buMulitply"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="operatorEvent"
                android:background="#000000"
                android:text="*"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
        </TableRow>
        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/bu7"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="7"
                android:textSize="25dp"
                android:onClick="numberEvent"
                android:background=" #000066"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/bu8"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textSize="25dp"
                android:onClick="numberEvent"
                android:background=" #000066"
                android:text="8"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/bu9"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:background=" #000066"
                android:text="9"
                android:textSize="25dp"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/buPercent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="#000000"
                android:text="%"
                android:textSize="25dp"
                android:onClick="percentEvent"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/bu4"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="4"
                android:textSize="25dp"
                android:onClick="numberEvent"
                android:background=" #000066"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/bu5"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:background=" #000066"
                android:text="5"
                android:textSize="25dp"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/bu6"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:onClick="numberEvent"
                android:textColor="@color/white"
                android:background=" #000066"
                android:text="6"
                android:textSize="25dp"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/buAdd"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="#000000"
                android:text="+"
                android:textSize="25dp"
                android:onClick="operatorEvent"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
        </TableRow>

        <TableRow

            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <Button
                android:id="@+id/bu1"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25dp"
                android:onClick="numberEvent"
                android:background=" #000066"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/bu2"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:background=" #000066"
                android:text="2"
                android:textSize="25dp"
                android:onClick="numberEvent"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/bu3"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:background=" #000066"
                android:text="3"
                android:textSize="25dp"
                android:onClick="numberEvent"
                android:layout_margin="2dp"
                ></Button>
            <Button
                android:id="@+id/buMinus"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="#000000"
                android:text="-"
                android:textSize="25dp"
                android:onClick="operatorEvent"
                android:textColor="@color/white"
                android:layout_margin="2dp"
                ></Button>
        </TableRow>

    </TableLayout>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TableRow

        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <Button
            android:id="@+id/bu0"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="46pt"
            android:layout_weight="2"
            android:text="0"
            android:textSize="25dp"
            android:onClick="numberEvent"
            android:background=" #000066"
            android:textColor="@color/white"
            android:layout_margin="2dp"

            ></Button>
        <Button
            android:id="@+id/buPoint"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="46pt"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:background=" #000066"
            android:text="."
            android:textSize="25dp"
            android:onClick="numberEvent"
            android:layout_margin="2dp"
            ></Button>
        <Button
            android:id="@+id/buEqual"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:onClick="equalEvent"
            android:textColor="@color/white"
            android:background=" #000000"
            android:text="="
            android:textSize="25dp"
            android:layout_margin="2dp"
            ></Button>

    </TableRow>
</LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developed by Vikas"
        android:textAlignment="center"
        android:textSize="15dp"
       />




</LinearLayout>
